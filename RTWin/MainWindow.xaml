<Window x:Class="RTWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rtWin="clr-namespace:RTWin"
        xmlns:awe="http://schemas.awesomium.com/winfx"
        Title="RTWin" Height="500" Width="600" WindowStartupLocation="CenterScreen" WindowState="Normal" WindowStyle="SingleBorderWindow">
    <Grid x:Name="RootGrid" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="New Language" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="94" Name="btnNewLanguage" Click="btnNewLanguage_Click"/>
        <Button Content="New Item" HorizontalAlignment="Left" Margin="139,10,0,0" VerticalAlignment="Top" Width="75" Name="btnNewItem" Click="btnNewItem_Click"/>
        <ListBox HorizontalAlignment="Left" Height="222" Margin="20,50,0,0" VerticalAlignment="Top" Width="277" Name="lbLanguages"/>
        <Button Content="Edit Language" HorizontalAlignment="Left" Margin="20,286,0,0" VerticalAlignment="Top" Width="75" Name="btnEditLanguage" Click="btnEditLanguage_Click"/>
        <ListBox HorizontalAlignment="Left" Height="222" Margin="368,50,0,0" VerticalAlignment="Top" Width="504" Name="lbItems">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        [<Run Text="{Binding ItemType}" />]
                        <Run Text="{Binding CollectionName}" />
                        <Run Text="{Binding CollectionNo}" />
                        - 
                        <Run Text="{Binding L1Title}" />
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="View" HorizontalAlignment="Left" Margin="368,286,0,0" VerticalAlignment="Top" Width="75" x:Name="btnView" Click="BtnView_OnClick"/>
        <Button Content="Edit" HorizontalAlignment="Left" Margin="462,286,0,0" VerticalAlignment="Top" Width="75" x:Name="btnEdit" Click="BtnEdit_OnClick" RenderTransformOrigin="1.72,0.455"/>
    </Grid>
</Window>
