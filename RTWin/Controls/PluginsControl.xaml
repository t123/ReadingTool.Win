<UserControl x:Class="RTWin.Controls.PluginsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <DockPanel Name="DockPanel">
            <Border DockPanel.Dock="Bottom" BorderThickness="0,1,0,0" BorderBrush="Black">
                <StackPanel Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                    <StackPanel Height="40" Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Top">
                        <Button Content="Add Plugin" Margin="5" MinWidth="75" Tag="Add" Click="Button_OnClick"></Button>
                        <Button Content="Delete Plugin" Margin="5" MinWidth="75" Tag="Delete" Click="Button_OnClick"></Button>
                        <Button Content="Export Plugins" Margin="5" MinWidth="75" Tag="Export" Click="Button_OnClick"></Button>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="150" Width="200" MaxWidth="300"></ColumnDefinition>
                    <ColumnDefinition Width="5"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <GroupBox Grid.Column="0">
                    <GroupBox.Header>
                        <TextBlock Margin="5" FontWeight="Heavy">Available Plugins</TextBlock>
                    </GroupBox.Header>
                    <ListBox ItemsSource="{Binding}" DisplayMemberPath="Name" MinWidth="100" Name="ListBoxPlugins" SelectionChanged="ListBoxPlugins_OnSelectionChanged">
                    </ListBox>
                </GroupBox>
                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>
                <GroupBox Grid.Column="2">
                    <GroupBox.Header>
                        <TextBlock Margin="5" FontWeight="Heavy">Details</TextBlock>
                    </GroupBox.Header>
                    <ContentControl Name="ContentControl"></ContentControl>
                </GroupBox>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
