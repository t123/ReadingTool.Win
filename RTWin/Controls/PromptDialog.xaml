<Window x:Class="RTWin.Controls.PromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PromptDialog" Width="300" SizeToContent="Height" MinWidth="300" MinHeight="130"
        WindowStartupLocation="CenterOwner"
        >
    <Grid>
        <StackPanel Margin="5,5,5,5">
            <TextBlock Name="TextBoxTitle" Margin="0,0,0,10" />
            <TextBox Name="TextBoxInput" Padding="3,3,3,3" />
            <Grid Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="ButtonOk" Content="OK"  Margin="0,0,5,0"  Click="ButtonOk_OnClick" MinWidth="70"/>
                    <Button Name="ButtonCancel" Content="Cancel" Margin="5,0,0,0" Click="ButtonCancel_OnClick" MinWidth="70"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
