<Window x:Class="RTWin.Controls.PromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PromptDialog" Width="400" SizeToContent="Height" MinHeight="130"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Topmost="True" ResizeMode="NoResize"
        Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
        >
    <Grid>
        <DockPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom" Height="30">
                <Button Name="ButtonOk" Content="OK"  Click="ButtonOk_OnClick" MinWidth="75" Margin="5"/>
                <Button Name="ButtonCancel" Content="Cancel"  Click="ButtonCancel_OnClick" MinWidth="75" Margin="5"/>
            </StackPanel>
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Name="TextBoxTitle" Margin="0,0,0,10" Grid.Row="0"/>
                <TextBox Name="TextBoxInput"  Grid.Row="1"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
